@model IEnumerable<NCM.Models.ComplianceResult>

@{
    ViewData["Title"] = "Compliance Results";
}

<h1>Compliance Scan Results</h1>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Rule</th>
            <th>Compliant</th>
            <th>Checked At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.ComplianceRule.RuleName</td>
                <td>@(r.IsCompliant ? "<span class=\"text-success\">Yes</span>" : "<span class=\"text-danger\">No</span>")</td>
                <td>@r.CheckedAt.ToLocalTime().ToString("g")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>

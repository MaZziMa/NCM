@model DiffPlex.DiffBuilder.Model.DiffPaneModel

@{
    ViewData["Title"] = "Config Diff";
}

<h1>Configuration Difference</h1>

<pre>
    @foreach (var line in Model.Lines)
    {
    <span class="diff-@line.Type.ToString().ToLower()">@line.Text</span>
    }
</pre>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>

<style>
    .diff-unchanged { color: black; }
    .diff-added { background-color: #d4fcbc; }
    .diff-deleted { background-color: #fbb6c2; }
</style>
